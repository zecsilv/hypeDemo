<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#FFFFFF"
    android:gravity="center">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ToggleButton
                android:id="@+id/id_btn_alarm"
                android:layout_width="250dp"
                android:layout_height="75dp"
                android:background="@drawable/button_alarm"
                android:textColor="#FFFFFF"
                android:textOff="@string/toggle_off"
                android:textOn="@string/toggle_on"
                android:textSize="32sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fab_margin">

            <TableLayout>

                <TableRow
                    android:layout_gravity="left"
                    android:layout_marginLeft="50dp">

                    <ImageView
                        android:layout_gravity="center|center_vertical"
                        android:src="@drawable/ic_num_instances_found" />

                    <TextView
                        android:id="@+id/tvNumInstancesFound"
                        android:textColor="#9b9b9b"
                        android:textSize="29sp" />
                </TableRow>
            </TableLayout>

            <TableLayout>

                <TableRow
                    android:layout_gravity="right"
                    android:layout_marginRight="50dp">

                    <ImageView
                        android:layout_gravity="center|center_vertical"
                        android:src="@drawable/ic_num_alarms"></ImageView>

                    <TextView
                        android:id="@+id/tvNumAlarms"
                        android:textColor="#9b9b9b"
                        android:textSize="29sp"></TextView>
                </TableRow>

            </TableLayout>

        </TableRow>
    </TableLayout>

</LinearLayout>